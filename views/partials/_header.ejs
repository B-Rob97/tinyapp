<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">

        <a class="nav-item nav-link" href="/urls">My URLs</a>

        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div> 
    <div>
      <!-- Check if username exists + logout button -->
      <% if (typeof username !== 'undefined') { %>
        <form action="/logout" method="post">
          <label 
          style="font-size: 22px; font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; vertical-align: middle;" 
          for="logout" class="username-display">Logged in as: <%= username %>!</label>
          <button style="vertical-align: middle; width: 75px; height: 50px; font-size: 10 px;" type="submit" class ='btn btn-dark'>Logout</button>
        </form>
      <% } else { %>
        <!-- New Username -->
      <form action="/login" method="post">
      <label 
      style="font-size: 25px; font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; vertical-align: middle;"
      for="username" class="username-display"></label>
      <input style="font-family:system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif; vertical-align: middle;" type="text" name="username">
      <button style="vertical-align: middle; width: 75px; height: 28px; font-size: 10px; text-align: center;" type="submit" class="btn btn-light">Login</button>
    </form>
  <% } %>
</div>

  </nav>
</header>